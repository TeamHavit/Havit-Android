<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="content"
            type="org.sopt.havit.data.ContentsData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="102dp"
                android:layout_height="104dp"
                android:radius="4dp"
                tools:srcCompat="@color/gray_1" />

            <ImageView
                android:id="@+id/iv_alarm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_alarmtag_puple" />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="22dp"
            android:ellipsize="end"
            android:fontFamily="@font/pretendard_medium"
            android:maxLines="2"
            android:text="@{content.title}"
            android:textColor="@color/Havit_gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/iv_setting"
            app:layout_constraintStart_toEndOf="@+id/fl_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="슈슈슉 이것은 제목입니다 슈슉슉슉 이것은 제목입니다 슈슉" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/pretendard_regular"
            android:maxLines="1"
            android:text="@{content.description}"
            android:textColor="@color/gray_3"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="상세내용 상세내용 상세내용 상세내용은 한줄만만" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="@{content.date}"
            android:textColor="@color/gray_2"
            android:textSize="9sp"
            app:layout_constraintStart_toEndOf="@+id/fl_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            tools:text="2021. 11. 24" />

        <TextView
            android:id="@+id/tv_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:fontFamily="@font/pretendard_regular"
            android:maxLines="1"
            android:text="@string/contents_divider"
            android:textColor="@color/gray_2"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date"
            app:layout_constraintEnd_toStartOf="@id/tv_url"
            app:layout_constraintStart_toEndOf="@+id/tv_date"
            app:layout_constraintTop_toTopOf="@+id/tv_date" />

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="1dp"
            android:ellipsize="end"
            android:ems="10"
            android:fontFamily="@font/pretendard_regular"
            android:text="@{content.url}"
            android:textColor="@color/gray_2"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_divider"
            app:layout_constraintStart_toEndOf="@+id/tv_divider"
            app:layout_constraintTop_toTopOf="@+id/tv_divider"
            tools:text="www.brunch.com.dididididi" />


        <TextView
            android:id="@+id/tv_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/pretendard_semibold"
            android:text="@{content.alarmDate}"
            android:textColor="@color/Havit_purple"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            tools:text="2022. 01. 01 " />

        <TextView
            android:id="@+id/tv_alarm_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="@string/contents_alarm_plan"
            android:textColor="@color/Havit_purple"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_alarm"
            app:layout_constraintStart_toEndOf="@+id/tv_alarm"
            app:layout_constraintTop_toTopOf="@+id/tv_alarm" />

        <ImageView
            android:id="@+id/iv_havit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_contents_read_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>