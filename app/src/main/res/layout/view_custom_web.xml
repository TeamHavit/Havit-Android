<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_webview"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white_gray">

    <TextView
        android:id="@+id/tv_webview_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:textAppearance="@style/Sub13Regular"
        android:textColor="@color/gray_2"
        android:text="@string/webview_unread"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_webview_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_contents_unread"
        app:layout_constraintBottom_toBottomOf="@+id/tv_webview_unread"
        app:layout_constraintEnd_toStartOf="@+id/tv_webview_unread"
        app:layout_constraintTop_toTopOf="@+id/tv_webview_unread" />

</androidx.constraintlayout.widget.ConstraintLayout>




