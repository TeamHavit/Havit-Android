<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data_home_contents"
            type="org.sopt.havit.data.HomeContentsData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/iv_contents"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:src="@drawable/rectangle_gray_1_radius_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_purple_1_radius_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_contents">

            <ImageView
                android:id="@+id/iv_category"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/oval_purple_radius_6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="6dp"
                android:text="@{data_home_contents.title}"
                android:textColor="@color/purple_text"
                android:textAppearance="@style/Mini10Regular"
                android:layout_marginBottom="3dp"
                tools:text="카테고리 이름"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_category"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="@{data_home_contents.header}"
            android:textColor="@color/havit_gray"
            tools:text="헤더입니다 헤더입니다 헤더입니다 헤더임"
            android:textAppearance="@style/Text14Medium"
            app:layout_constraintBottom_toTopOf="@id/tv_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_title" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@{data_home_contents.time}"
            android:textColor="@color/gray_2"
            tools:text="2021. 11. 24"
            android:textAppearance="@style/Mini9Regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>