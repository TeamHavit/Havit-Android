<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.share.SetNotificationFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_back_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_alarm_space"
                android:textAppearance="@style/Header16Bold"
                android:textColor="@color/havit_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="19dp"
                android:text="@string/complete"
                android:textAppearance="@style/Text14Medium"
                android:textColor="@color/havit_purple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_tool_bar">

            <TextView
                android:id="@+id/tv_set_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="39dp"
                android:text="@string/set_notification_time"
                android:textAppearance="@style/Header22Semibold"
                android:textColor="@color/gray_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_1h"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/rectangle_purple_category_radius_6"
                android:gravity="center"
                android:text="@string/after_1h"
                android:textAppearance="@style/List16Semibold"
                android:textColor="@color/gray_3"
                app:layout_constraintTop_toBottomOf="@id/tv_set_alarm" />

            <TextView
                android:id="@+id/btn_2h"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/rectangle_purple_category_radius_6"
                android:gravity="center"
                android:text="@string/after_2h"
                android:textAppearance="@style/List16Semibold"
                android:textColor="@color/gray_3"
                app:layout_constraintTop_toBottomOf="@id/btn_1h" />

            <TextView
                android:id="@+id/btn_3h"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/rectangle_purple_category_radius_6"
                android:gravity="center"
                android:text="@string/after_3h"
                android:textAppearance="@style/List16Semibold"
                android:textColor="@color/gray_3"
                app:layout_constraintTop_toBottomOf="@id/btn_2h" />

            <TextView
                android:id="@+id/btn_tomorrow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/rectangle_purple_category_radius_6"
                android:gravity="center"
                android:text="@string/tomorrow_this_time"
                android:textAppearance="@style/List16Semibold"
                android:textColor="@color/gray_3"
                app:layout_constraintTop_toBottomOf="@id/btn_3h" />

            <TextView
                android:id="@+id/btn_1min"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/rectangle_purple_category_radius_6"
                android:gravity="center"
                android:text="@string/after_1_min"
                android:textAppearance="@style/List16Semibold"
                android:textColor="@color/gray_3"
                app:layout_constraintTop_toBottomOf="@id/btn_tomorrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>