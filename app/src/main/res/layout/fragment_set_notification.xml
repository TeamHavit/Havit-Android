<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.share.SetNotificationFragment">

    <TextView
        android:id="@+id/tv_set_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="39dp"
        android:text="@string/set_notification_time"
        android:textAppearance="@style/Header22Semibold"
        android:textColor="@color/gray_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_1h"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangle_purple_category_radius_6"
        android:gravity="center"
        android:text="1시간 후"
        android:textAppearance="@style/List16Semibold"
        android:textColor="@color/gray_3"
        app:layout_constraintTop_toBottomOf="@id/tv_set_alarm" />

    <TextView
        android:id="@+id/btn_2h"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/rectangle_purple_category_radius_6"
        android:gravity="center"
        android:text="2시간 후"
        android:textAppearance="@style/List16Semibold"
        android:textColor="@color/gray_3"
        app:layout_constraintTop_toBottomOf="@id/btn_1h" />

    <TextView
        android:id="@+id/btn_3h"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/rectangle_purple_category_radius_6"
        android:gravity="center"
        android:text="3시간 후"
        android:textAppearance="@style/List16Semibold"
        android:textColor="@color/gray_3"
        app:layout_constraintTop_toBottomOf="@id/btn_2h" />

    <TextView
        android:id="@+id/btn_tomorrow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/rectangle_purple_category_radius_6"
        android:gravity="center"
        android:text="내일 이 시간"
        android:textAppearance="@style/List16Semibold"
        android:textColor="@color/gray_3"
        app:layout_constraintTop_toBottomOf="@id/btn_3h" />


</androidx.constraintlayout.widget.ConstraintLayout>